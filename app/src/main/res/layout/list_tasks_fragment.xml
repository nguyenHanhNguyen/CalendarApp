<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="nhn.calendarapp.ui.ListTasksFragment.Handler" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main"
        tools:context="nhn.calendarapp.ui.ListTasksActivity">

        <TextView
            android:id="@+id/tv_month_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            tools:text="ABC" />

        <View
            android:id="@+id/separator"
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_month_year"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/margin_small"
            android:background="@android:color/white" />

        <com.github.sundeepk.compactcalendarview.CompactCalendarView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_below="@+id/separator"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_small"
            app:compactCalendarBackgroundColor="#DDCBF8"
            app:compactCalendarCurrentDayBackgroundColor="@color/governorBay"
            app:compactCalendarCurrentSelectedDayBackgroundColor="#CEC8FF"
            app:compactCalendarTargetHeight="250dp"
            app:compactCalendarTextSize="14sp" />

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/calendar">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_tasks_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:padding="@dimen/padding_small" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_create"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="@dimen/margin_large"
                android:onClick="@{()->handler.onFabClick()}"
                android:src="@drawable/ic_add"
                app:backgroundTint="@color/colorPrimaryDark"
                app:elevation="@dimen/small_corner"
                app:layout_anchor="@id/rcv_tasks_list"
                app:layout_anchorGravity="bottom|right" />

        </android.support.design.widget.CoordinatorLayout>
    </RelativeLayout>
</layout>